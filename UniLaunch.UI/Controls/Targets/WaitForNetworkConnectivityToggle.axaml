<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:UniLaunch.UI.Controls.Targets">
    <Design.PreviewWith>
        <controls:WaitForNetworkConnectivityToggle />
    </Design.PreviewWith>

    <Style Selector="controls|WaitForNetworkConnectivityToggle">
        <Setter Property="Template">
            <ControlTemplate>
                <CheckBox IsChecked="{TemplateBinding State,Mode=TwoWay}"
                          Margin="0">
                    Wait for network connectivity
                </CheckBox>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>