<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:UniLaunch.UI.Controls.Targets"
        xmlns:assets="clr-namespace:UniLaunch.UI.Assets">
    <Design.PreviewWith>
        <controls:WaitForNetworkConnectivityToggle />
    </Design.PreviewWith>

    <Style Selector="controls|WaitForNetworkConnectivityToggle">
        <Setter Property="Template">
            <ControlTemplate>
                <CheckBox IsChecked="{TemplateBinding State,Mode=TwoWay}"
                          Margin="0"
                          Content="{x:Static assets:Resources.WaitForNetworkConnectivityToggleControlLabelWaitForNetwork}" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>