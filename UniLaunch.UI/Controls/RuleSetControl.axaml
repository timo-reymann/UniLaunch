<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="200"
             xmlns:vm="using:UniLaunch.UI.ViewModels"
             x:DataType="vm:RulesetViewModel"
             x:Class="UniLaunch.UI.Controls.RuleSetControl">
    <Design.DataContext>
        <vm:RulesetViewModel />
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Stretch">
        <Label>Name</Label>
        <TextBox Text="{Binding NameProperty, Mode=TwoWay}" />
        <Label>Included rules:</Label>
        <ItemsControl ItemsSource="{Binding RulesListProperty}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2"
                            CornerRadius="5"
                            BorderBrush="Gray" BorderThickness="1"
                            Padding="5">
                        <ContentControl
                            Margin="10"
                            Content="{Binding }" />

                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>